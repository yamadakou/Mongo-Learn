extends layout

block content
  form(method='post', action='/userlist')
    div
      label name:
      input(type="text", name="user_name")
      label e-Mail:
      input(type="text", name="user_email")
    div
      input(type="submit", value="Add Or Update") 
  h1.
    User List
  ul
    each user, i in userlist
      li
        a(href="mailto:#{user.email}")= user.name